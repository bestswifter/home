" Don't nerf for compatibility
set nocompatible

" Pathogen early
filetype off
call pathogen#infect()
call pathogen#helptags()

" Syntax highlighting, number gutter and rule on by default
syntax on
set number
"set ruler

" Whitespace stuff
set nowrap
set tabstop=2
set shiftwidth=2
set expandtab
set autoindent
" Show trailing whitespace
set list listchars=tab:\ \ ,trail:Â·

" Searching
set hlsearch
set incsearch
set ignorecase
set smartcase

" Color scheme
let base16colorspace=256
colorscheme base16-solarized

" Reset leader (default \), lower leader+<key> timeout
let mapleader=","
set timeoutlen=500

" Clear search highlight with F1
nmap <F1> :noh<CR>

" Check for file updates with F5
set autoread
nmap <F5> :checktime<CR>

" Inserts the path of the currently edited file into a command
" Command mode: Ctrl+P
cmap <C-P> <C-R>=expand("%:p:h") . "/" <CR>

" Allow per-project .vimrc
set exrc
" Only execute safe per-project vimrc commands
set secure

" Load other rc files
runtime! rc.d/**/*.vim
