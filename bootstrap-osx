#!/usr/bin/env zsh

/usr/bin/ruby -e "$(/usr/bin/curl -fsSL https://raw.github.com/mxcl/homebrew/master/Library/Contributions/install_homebrew.rb)"

brew tap homebrew/dupes
brew install brew-gem

brew install ack curl git gh gnupg2 psgrep pstree watch wget
brew install apple-gcc42 automake autoconf
brew install mysql
brew install postgresql geos postgis geoip
brew install redis
brew install node
brew install ffmpeg
brew install rbenv rbenv-default-gems rbenv-communal-gems rbenv-gem-rehash rbenv-vars ruby-build
brew install imagemagick json-c libffi sqlite3 exiv2

rbenv install 2.1.2
rbenv global 2.1.2

rbenv install 1.8.7-p375
rbenv install 1.9.3-p545
rbenv install 2.0.0-p451
rbenv install jruby-1.6.8
rbenv install jruby-1.7.12
rbenv install rbx-1.2.4
rbenv install rbx-2.2.6

rbenv exec gem install bundler
