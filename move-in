#!/usr/bin/env zsh -D

pushd

pushd .home

git submodule update

mkdir -p .vim/colors
pushd .vim/colors
ln -s ../../solarized/vim-colors-solarized/colors/solarized.vim
popd

mkdir -p .vim/autoload
pushd .vim/autoload
ln -s ../../vim-pathogen/autoload/pathogen.vim
popd

popd

ln -s .home/.ackrc
ln -s .home/.bin
ln -s .home/.vim
ln -s .vim/rc .vimrc
ln -s .home/.zsh
ln -s .zsh/env .zshenv
ln -s .zsh/profile .zshprofile
ln -s .zsh/rc .zshrc

popd
